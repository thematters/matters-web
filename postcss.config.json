{
  "plugins": [
    [
      "@csstools/postcss-global-data",
      {
        "files": ["./src/common/styles/variables/breakpoints.css"]
      }
    ],
    [
      "postcss-mixins",
      {
        "mixinsFiles": "./src/common/styles/mixins.css"
      }
    ],
    [
      "postcss-preset-env",
      {
        "stage": 0,
        "browsers": ["> 0.2% and not dead"],
        "preserve": false,
        "features": {
          "has-pseudo-class": { "preserve": true }
        }
      }
    ],
    "postcss-calc",
    "postcss-color-function"
  ]
}
