files:
  "/home/ec2-user/bin/aws-memory-metrics" :
    mode: "000755"
    source: "https://github.com/thematters/aws-memory-metrics/releases/download/tag%2Fv0.1/aws-memory-metrics"

container_commands:
  05cron:
    command: "crontab -l | grep -q 'aws-memory-metrics' || crontab -l | { cat; echo '* * * * * /home/ec2-user/bin/aws-memory-metrics &>/dev/null'; } | crontab -"
    test: "[ -x /home/ec2-user/bin/aws-memory-metrics ]"
    ignoreErrors: false
