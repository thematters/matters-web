{
  "name": "matters-web",
  "version": "3.28.0",
  "description": "codebase of Matters' website",
  "sideEffects": false,
  "author": "Matters <hi@matters.news>",
  "engines": {
    "node": ">=12.16",
    "npm": ">=6.14"
  },
  "license": "Apache-2.0",
  "scripts": {
    "dev": "PORT=\"${PORT:-3000}\"; next -p $PORT",
    "start": "PORT=\"${PORT:-3000}\"; next start -p $PORT",
    "build": "NODE_ENV=production next build",
    "export": "next export",
    "test": "jest",
    "format": "prettier --write \"{,!(.next|build|node_modules|coverage|out)/**/!(__generated__)/}*.{js,jsx,ts,tsx,json}\"",
    "format:check": "npm run format -- --list-different",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:ts": "tsc --project tsconfig.json --noEmit && tslint -p .",
    "lint:ts:fix": "tslint -p . --fix",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:css:fix": "stylelint 'src/**/*.css' --fix",
    "analyze": "ANALYZE=true next build",
    "gen:type": "npm run gen:clean && apollo client:codegen __generated__ --target=typescript --includes 'src/**/*.{ts,tsx}' --endpoint 'https://server-develop.matters.news/graphql'",
    "gen:type:prod": "npm run gen:clean && apollo client:codegen __generated__ --target=typescript --includes 'src/**/*.{ts,tsx}' --endpoint 'https://server.matters.news/graphql'",
    "gen:watch": "npm run gen:type -- --watch",
    "gen:watch:prod": "npm run gen:type:prod -- --watch",
    "gen:clean": "find . | grep -E '__generated__' | xargs rm -rf",
    "gen:fragmentTypes": "node bin/buildFragmentTypes.js",
    "bdd": "cucumber-js bdd/features/*.feature -r cucumber.conf.js -r \"bdd/steps/*.js\" --format node_modules/cucumber-pretty",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-hooks": "^3.1.3",
    "@apollo/react-ssr": "^3.1.3",
    "@matters/apollo-upload-client": "^11.1.0",
    "@matters/matters-editor": "^0.1.22",
    "@reach/alert": "^0.15.2",
    "@reach/dialog": "^0.15.2",
    "@reach/visually-hidden": "^0.15.2",
    "@sentry/browser": "^6.8.0",
    "@stripe/react-stripe-js": "^1.4.1",
    "@stripe/stripe-js": "^1.15.1",
    "@tippyjs/react": "^4.2.5",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-cache-persist": "^0.1.1",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-context": "^1.0.20",
    "apollo-link-error": "^1.1.13",
    "apollo-link-persisted-queries": "^0.2.2",
    "apollo-link-ws": "^1.0.20",
    "apollo-utilities": "^1.3.4",
    "autosize": "^5.0.1",
    "classnames": "^2.3.1",
    "d3-array": "^3.0.1",
    "d3-axis": "^3.0.0",
    "d3-ease": "^3.0.1",
    "d3-format": "^3.0.1",
    "d3-interpolate": "^3.0.1",
    "d3-scale": "^4.0.0",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.0.1",
    "d3-time-format": "^4.0.0",
    "d3-transition": "^3.0.1",
    "date-fns": "^2.22.1",
    "embla-carousel": "^4.5.3",
    "express": "^4.17.1",
    "fastest-levenshtein": "^1.0.12",
    "fingerprintjs2": "^2.1.4",
    "firebase": "^7.23.0",
    "formik": "^2.1.7",
    "graphql": "^14.7.0",
    "graphql-tag": "^2.11.0",
    "isomorphic-unfetch": "^3.1.0",
    "jump.js": "^1.0.2",
    "lodash": "^4.17.21",
    "next": "^11.0.1",
    "next-with-apollo": "^5.2.1",
    "nprogress": "^0.2.0",
    "number-precision": "^1.5.0",
    "path-to-regexp": "^6.2.0",
    "pulltorefreshjs": "^0.1.22",
    "query-string": "^7.0.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.2",
    "react-focus-lock": "^2.5.2",
    "react-remove-scroll": "^2.4.3",
    "react-spring": "^9.2.3",
    "react-use-gesture": "^9.1.3",
    "react-virtualized": "^9.22.3",
    "react-waypoint": "^10.1.0",
    "subscriptions-transport-ws": "^0.10.0",
    "use-debounce": "^7.0.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@next/bundle-analyzer": "^11.0.1",
    "@storybook/addon-a11y": "^6.3.2",
    "@storybook/addon-actions": "^6.3.2",
    "@storybook/addon-essentials": "^6.3.2",
    "@storybook/addon-links": "^6.3.2",
    "@storybook/react": "^6.3.2",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/react": "^11.2.6",
    "@types/autosize": "^4.0.0",
    "@types/classnames": "^2.3.1",
    "@types/d3": "^7.0.0",
    "@types/express": "^4.17.9",
    "@types/fingerprintjs2": "^2.0.0",
    "@types/grecaptcha": "^3.0.2",
    "@types/jest": "^26.0.23",
    "@types/jump.js": "^1.0.3",
    "@types/lodash": "^4.14.170",
    "@types/nprogress": "0.2.0",
    "@types/pulltorefreshjs": "^0.1.4",
    "@types/react": "^17.0.11",
    "@types/react-beautiful-dnd": "^13.1.0",
    "@types/react-copy-to-clipboard": "^5.0.0",
    "@types/react-dom": "^17.0.8",
    "@types/react-responsive": "^8.0.2",
    "@types/react-virtualized": "^9.21.11",
    "@types/segment-analytics": "0.0.33",
    "@types/styled-jsx": "^2.2.9",
    "@types/validator": "^13.6.2",
    "apollo": "^2.32.5",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-polyfill": "^6.26.0",
    "chromedriver": "^91.0.1",
    "core-js": "^3.15.2",
    "cucumber": "^6.0.5",
    "cucumber-pretty": "^6.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "file-loader": "^6.2.0",
    "geckodriver": "^2.0.1",
    "husky": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.5",
    "next-compose-plugins": "^2.2.1",
    "next-offline": "^5.0.5",
    "nightwatch": "^1.7.7",
    "nightwatch-api": "^3.0.2",
    "node-fetch": "^2.6.1",
    "postcss-calc": "^7.0.5",
    "postcss-color-function": "^4.1.0",
    "postcss-mixins": "^6.2.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.2",
    "react-is": "^17.0.2",
    "styled-jsx-plugin-postcss": "^4.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^4.3.5",
    "webpack-merge": "^5.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "preset": "ts-jest/presets/js-with-ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|xml)$": "<rootDir>/__mocks__/assetsTransformer.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)",
      "**/*.test.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/.next/",
      "<rootDir>/bin/",
      "<rootDir>/static/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^.+\\.(gif|png|jpg|ttf|eot)\\?(resize|sizes)(.+)?$": "<rootDir>/__mocks__/fileResizeMock.js",
      "^.+\\.(gif|png|jpg|ttf|eot)(\\?.+)?$": "<rootDir>/__mocks__/fileMock.js",
      "^.+\\.svg(\\?.+)?$": "<rootDir>/__mocks__/svgMock.js",
      "\\.css$": "<rootDir>/__mocks__/styleMock.js",
      "@/(.*)$": "<rootDir>/$1",
      "~/(.*)$": "<rootDir>/src/$1"
    },
    "coverageDirectory": "<rootDir>/coverage/",
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "plugins": [
            "dynamic-import-node",
            "@babel/plugin-proposal-optional-chaining"
          ],
          "presets": [
            [
              "next/babel"
            ]
          ]
        },
        "tsConfig": "<rootDir>/tsconfig.json",
        "diagnostics": false
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
