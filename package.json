{
  "name": "matters-web",
  "version": "1.0.0",
  "description": "codebase of Matters' website",
  "author": "",
  "engines": {
    "node": ">=10.14.1",
    "npm": ">=6.5.0"
  },
  "license": "ISC",
  "scripts": {
    "dev": "nodemon",
    "test": "jest",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "build": "npm run build:next && npm run build:server",
    "start": "NODE_ENV=production node build/production-server/server.js",
    "format": "prettier --write \"{,!(build|node_modules)/**/}*.{js,jsx,ts,tsx,json}\"",
    "format:check": "npm run format -- --list-different",
    "lint": "tslint -p .",
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build"
  },
  "dependencies": {
    "apollo-boost": "^0.1.27",
    "classnames": "^2.2.6",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.11",
    "mitt": "^1.1.3",
    "module-alias": "^2.1.0",
    "next": "^8.0.0",
    "next-with-apollo": "^3.3.2",
    "react": "^16.8.1",
    "react-apollo": "^2.4.1",
    "react-content-loader": "^4.0.1",
    "react-dom": "^16.8.1",
    "react-responsive": "^6.1.1",
    "svg-sprite-loader": "^4.1.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.1.17",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.120",
    "@types/next": "^7.0.9",
    "@types/react": "^16.8.2",
    "@types/react-responsive": "^3.0.2",
    "@types/styled-jsx": "^2.2.7",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-typescript": "^1.1.1",
    "babel-plugin-module-resolver": "^3.1.3",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-optipng": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "jest": "^24.1.0",
    "lost": "^8.3.0",
    "next-compose-plugins": "^2.1.1",
    "next-optimized-images": "^2.3.3",
    "next-size": "^2.0.1",
    "nodemon": "^1.18.10",
    "postcss-calc": "^7.0.1",
    "postcss-color-function": "^4.0.1",
    "postcss-conditionals": "^2.1.0",
    "postcss-each": "^0.10.0",
    "postcss-preset-env": "^6.5.0",
    "prettier": "1.16.4",
    "styled-jsx-plugin-postcss": "^2.0.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  },
  "_moduleAliases": {
    "~": "./build/production-server"
  },
  "nodemonConfig": {
    "watch": [
      "server.ts",
      "common/enums.ts",
      "common/styles/variables/*.css",
      "postcss.config.js",
      "next.config.js"
    ],
    "env": {
      "NODE_ENV": "development",
      "BABEL_DISABLE_CACHE": 1
    },
    "exec": "npm run build:server && node build/production-server/server.js"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)",
      "**/*.test.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/bin/",
      "<rootDir>/static/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>common/utils/setupTests.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react",
          "allowJs": true,
          "allowSyntheticDefaultImports": true,
          "esModuleInterop": true,
          "noImplicitAny": true,
          "sourceMap": true,
          "target": "es6"
        },
        "diagnostics": false
      }
    }
  }
}
